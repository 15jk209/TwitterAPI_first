<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.ryoya.twitterapi_first.Post_tweet_activity"
    tools:showIn="@layout/activity_post_tweet_activity"
    android:orientation="vertical"
    android:background="@color/black"
    >

    <EditText
        android:id="@+id/edit_text"
        android:layout_height="128dp"
        android:layout_width="match_parent"
        android:hint="いまどうしてる？"
        android:textColor="@color/white"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="喜び"
            android:textSize="18dp"
            android:textColor="@color/white"/>

        <SeekBar
            android:id="@+id/seekBar1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_weight="4"
            android:max="4"
            android:progress="2"
            android:textColor="@color/white"
        />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="悲しみ"
            android:textSize="18dp"
            android:textColor="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="怒り"
            android:textSize="18dp"
            android:textColor="@color/white"/>

        <SeekBar
            android:id="@+id/seekBar2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_weight="4"
            android:max="4"
            android:progress="2"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="恐れ"
            android:textSize="18dp"
            android:textColor="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="信頼"
            android:textSize="18dp"
            android:textColor="@color/white"/>

        <SeekBar
            android:id="@+id/seekBar3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_weight="4"
            android:max="4"
            android:progress="2"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="嫌悪"
            android:textSize="18dp"
            android:textColor="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="受容"
            android:textSize="18dp"
            android:textColor="@color/white"/>

        <SeekBar
            android:id="@+id/seekBar4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_weight="4"
            android:max="4"
            android:progress="2"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="驚き"
            android:textSize="18dp"
            android:textColor="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <Button
        android:id="@+id/angry"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="怒り"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/sad"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="悲しい"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/fun"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="嬉しい"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/enjoy"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="楽しい"
        android:layout_weight="1"/>


    </LinearLayout>

    <Button
        android:id="@+id/mail"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="メールを送信" />


</LinearLayout>

